<p id="notice"><%= notice %></p>

<h1>Campaigns</h1>

<table>
  <thead>
    <tr>
      <th>User Email</th>
      <th>Title</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Theaters</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
          <td><%= campaign.user.email %></td>
        <td><%= campaign.title %></td>
        <td><%= campaign.start_date %></td>
        <td><%= campaign.end_date %></td>
        <td><%= campaign.theaters %></td>
        <td><%= link_to 'Show', campaign %></td>
          <% if campaign.user == current_user %>
            <td><%= link_to 'Edit', edit_campaign_path(campaign) %></td>
            <td><%= link_to 'Destroy', campaign, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Campaign', new_campaign_path %>
